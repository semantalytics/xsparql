<?xml version="1.0"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>external</artifactId>
    <groupId>org.deri.xsparql</groupId>
    <version>0.3</version>
  </parent>
  <packaging>bundle</packaging>
  <groupId>org.deri.xsparql</groupId>
  <artifactId>com.hp.hpl.jena.arq</artifactId>
  <version>2.8.7</version>
  <name>Jena ARQ OSGi Bundle</name>
  <dependencies>
    <dependency>
      <groupId>com.hp.hpl.jena</groupId>
      <artifactId>arq</artifactId>
      <version>${pom.version}</version>
      <exclusions>
        <!--exclusion> <artifactId>xmlParserAPIs</artifactId> <groupId>xerces</groupId> 
          </exclusion -->
        <exclusion>
          <artifactId>xercesImpl</artifactId>
          <groupId>xerces</groupId>
        </exclusion>
        <exclusion>
          <groupId>log4j</groupId>
          <artifactId>log4j</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-log4j12</artifactId>
        </exclusion>	
        <exclusion>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-api</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.hp.hpl.jena</groupId>
          <artifactId>jena</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.ibm.icu</groupId>
          <artifactId>icu4j</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xerces.xercesImpl</artifactId>
      <version>2.9.1</version>
    </dependency>
    <dependency>
      <groupId>org.apache.log4j</groupId>
      <artifactId>com.springsource.org.apache.log4j</artifactId>
      <version>1.2.16</version><!-- also more recent version -->
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>com.springsource.slf4j.log4j</artifactId>
      <version>1.6.1</version><!-- also more recent version -->
    </dependency>
    <dependency>
      <groupId>org.deri.xsparql</groupId>
      <artifactId>com.hp.hpl.jena</artifactId>
      <version>2.6.4</version>
    </dependency>
    <dependency>
      <groupId>com.ibm.icu</groupId>
      <artifactId>com.springsource.com.ibm.icu</artifactId>
      <version>3.8.1</version><!-- this is actually a more recent version than then the one originally refered to -->
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Embed-Dependency>*;scope=!test;artifactId=!commons-logging|arq|xml-apis|xercesImpl|icu4j|com.springsource.com.ibm.icu|xerces.xercesImpl|jena|com.hp.hpl.jena|com.springsource.org.apache.log4j|com.springsource.slf4j.log4j|com.springsource.slf4j.api</Embed-Dependency>
            <Export-Package>com.hp.hpl.jena.sparql*,arq.cmd*,org.openjena.*,com.hp.hpl.jena.query,com.hp.hpl.jena.query.larq,com.hp.hpl.jena.update</Export-Package>
            <Embed-Transitive>true</Embed-Transitive>
            <Import-Package>!com.sun.*,
              !org.relaxng.datatype,
              *</Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
