<?xml version="1.0" encoding="UTF-8"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>external</artifactId>
    <groupId>org.deri.xsparql</groupId>
    <version>20121105-SNAPSHOT</version>
  </parent>
  <packaging>bundle</packaging>
  <groupId>org.deri.xsparql</groupId>
  <artifactId>com.hp.hpl.jena.tdb</artifactId>
  <version>0.8.9</version>
  <name>Jena TDB Bundle</name>
  <dependencies>
    <dependency>
      <groupId>com.hp.hpl.jena</groupId>
      <artifactId>tdb</artifactId>
      <version>${pom.version}</version>
      <exclusions>
        <exclusion>
          <artifactId>slf4j-api</artifactId>
          <groupId>org.slf4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jenatest</artifactId>
          <groupId>com.hp.hpl.jena</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit</artifactId>
          <groupId>junit</groupId>
        </exclusion>
        <exclusion>
          <groupId>log4j</groupId>
          <artifactId>log4j</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-log4j12</artifactId>
        </exclusion>	
        <exclusion>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-api</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.hp.hpl.jena</groupId>
          <artifactId>jena</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.hp.hpl.jena</groupId>
          <artifactId>arq</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.apache.log4j</groupId>
      <artifactId>com.springsource.org.apache.log4j</artifactId>
      <version>1.2.16</version><!-- also more recent version -->
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>com.springsource.slf4j.log4j</artifactId>
      <version>1.6.1</version><!-- also more recent version -->
    </dependency>
    <dependency>
      <groupId>org.deri.xsparql</groupId>
      <artifactId>com.hp.hpl.jena</artifactId>
      <version>2.6.4</version>
    </dependency>
    <dependency>
      <groupId>org.deri.xsparql</groupId>
      <artifactId>com.hp.hpl.jena.arq</artifactId>
      <version>2.8.7</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Embed-Dependency>*;scope=!test;artifactId=!xerces.xercesImpl|wstx-asl|lucene-core|stax-api|jena|com.hp.hpl.jena|xercesImpl|xml-apis|xml-resolver|icu4j|com.springsource.com.ibm.icu|com.springsource.org.apache.log4j|com.springsource.slf4j.log4j|com.springsource.slf4j.api|arq|com.hp.hpl.jena.arq|tdb</Embed-Dependency>
            <Embed-Transitive>true</Embed-Transitive>
            <Export-Package>com.hp.hpl.jena.tdb*, 
              tdb.cmdline
              </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
