declare namespace foaf="http://xmlns.com/foaf/0.1/";
for $Person $Name from <examples/foaf.rdf>
where {$Person name $Name}
order by $Name
return 
 <Person name="{$Name}">
   {
    for ?FName in <foaf.rdf>
    where { $Person knows $Friend . 
            $Person name $Name. 
            $Friend name $Fname. } 
    return <knows>$FName</knows> 
    }
</Person>

